<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">

        <shape android:shape="oval">

            <solid android:color="@color/AppWhiteColor"/>
            <size android:width="17dp" android:height="17dp"/>
            <stroke android:width="1dp" android:color="@color/AppSwitchThumbOff"/>

        </shape>

    </item>
    <item android:state_checked="true">

        <shape android:shape="oval">

            <solid android:color="@color/AppWhiteColor"/>
            <size android:width="17dp" android:height="17dp"/>
            <stroke android:width="1dp" android:color="@color/AppBackgroundColor"/>

        </shape>

    </item>

</selector>