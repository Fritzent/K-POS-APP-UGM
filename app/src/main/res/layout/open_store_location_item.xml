<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppWhiteColor">

    <RelativeLayout
        android:id="@+id/StoreItemLocation"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="17dp"
        android:background="@drawable/custome_recycleview_background">

        <ImageView
            android:id="@+id/RyImageLocation"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/RxTextLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RyImageLocation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sspreguler"
            android:text="Kantin Sekolah Vokasi UGM"
            android:textColor="@color/AppfontColor"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>