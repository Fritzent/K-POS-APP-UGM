<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AdvancedSettingScreen">

    <RelativeLayout
        android:id="@+id/CustomeActionBarAdvancedSetting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/AppBackgroundColor"
        >

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sspbold"
            android:text="@string/txtAdvanced"
            android:textColor="@color/AppWhiteColor"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/AdvancedSettingMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CustomeActionBarAdvancedSetting">

        <LinearLayout
            android:id="@+id/editstoreprofileSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sspbold"
                android:text="@string/txtEditStoreProfile"
                android:textColor="@color/AppfontColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/AdvancedLineOne"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/editstoreprofileSide"
            android:layout_marginTop="14dp"
            android:background="@color/shadowWhiteOpacity5" />

        <LinearLayout
            android:id="@+id/helpSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdvancedLineOne"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sspbold"
                android:text="@string/txtHelpMenu"
                android:textColor="@color/AppfontColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/AdvancedLineTwo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/helpSide"
            android:layout_marginTop="14dp"
            android:background="@color/shadowWhiteOpacity5" />

        <LinearLayout
            android:id="@+id/aboutSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdvancedLineTwo"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sspbold"
                android:text="@string/txtAbout"
                android:textColor="@color/AppfontColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/AdvancedLineThree"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/aboutSide"
            android:layout_marginTop="14dp"
            android:background="@color/shadowWhiteOpacity5" />

        <LinearLayout
            android:id="@+id/deleteSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AdvancedLineThree"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sspbold"
                android:text="@string/txtDeleteAccount"
                android:textColor="@color/AppfontColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/AdvancedLineFour"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/deleteSide"
            android:layout_marginTop="14dp"
            android:background="@color/shadowWhiteOpacity5" />


    </RelativeLayout>

    <View
        android:id="@+id/AdvancedLineFive"
        android:layout_width="43dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/AdvancedSettingMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:background="@color/shadowWhiteOpacity5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/AdvancedLineFive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/txtVersionApp"
        android:textColor="@color/AppgrayfontColor"
        android:fontFamily="@font/sspreguler"
        android:textSize="14sp"
        android:layout_marginTop="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>